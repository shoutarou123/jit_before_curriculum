<div class="container text-center">
  <div class="row">
    <div class="col-md offset-md-1">
      <div class="m-2">
        <h1>記事一覧</h1>
        <p>
          <%= link_to "記事新規作成", new_article_path, class: "btn btn-primary" %>
        </p>
        <table class="table">
          <thead>
            <tr>
              <th>詳細表示</th>
              <th>タイトル</th>
              <th>内容</th>
              <th>画像</th>
              <th>編集・削除</th>
            </tr>
          </thead>
          <tbody class="border-bottom">
            <tr>
              <% @articles.each do |article| %>
              <td><%= link_to "詳細", '#', class: "btn btn-primary" %></td>
              <td><%= article.title %></td>
              <td><%= article.content %></td>
              <td>
                  <% article.image.each do |image| %>
                    <%= image_tag image, size: "150x150" %>
                  <% end %>
              </td>
              <td>
                <%= link_to "編集", '#', class: "btn btn-success" %>
                <%= link_to "削除", '#', class: "btn btn-danger" %>
              </td>
              
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>