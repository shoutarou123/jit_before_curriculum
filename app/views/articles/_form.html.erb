<%= form_for(@article) do |f| %>

  <div class="field m-2">
    <%= f.label :title %><br />
    <%= f.text_field :title, style: "width:100%" %>
  </div>

  <div class="field m-2">
    <%= f.label :content %><br />
    <%= f.text_area :content, style: "width:100%" %>
  </div>

  <div class="field m-2">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary m-2" %><br />
<% end %>
<%= link_to "戻る", :back %>